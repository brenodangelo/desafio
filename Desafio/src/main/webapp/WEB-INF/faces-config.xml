<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

	<navigation-rule>
		<navigation-case>
			<from-outcome>inicio</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<navigation-case>
			<from-outcome>cargoInsert</from-outcome>
			<to-view-id>/cargoInsert.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<navigation-case>
			<from-outcome>cargoList</from-outcome>
			<to-view-id>/cargoList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-outcome>cargoUpdate</from-outcome>
			<to-view-id>/cargoUpdate.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<navigation-case>
			<from-outcome>perfilInsert</from-outcome>
			<to-view-id>/perfilInsert.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<navigation-case>
			<from-outcome>perfilList</from-outcome>
			<to-view-id>/perfilList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-outcome>perfilUpdate</from-outcome>
			<to-view-id>/perfilUpdate.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<navigation-case>
			<from-outcome>usuarioInsert</from-outcome>
			<to-view-id>/usuarioInsert.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<navigation-case>
			<from-outcome>usuarioList</from-outcome>
			<to-view-id>/usuarioList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-outcome>usuarioUpdate</from-outcome>
			<to-view-id>/usuarioUpdate.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


	<managed-bean>
		<managed-bean-name>login</managed-bean-name>
		<managed-bean-class>desafio.bean.Login</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>cargoBean</managed-bean-name>
		<managed-bean-class>desafio.bean.CargoBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>perfilBean</managed-bean-name>
		<managed-bean-class>desafio.bean.PerfilBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>usuarioBean</managed-bean-name>
		<managed-bean-class>desafio.bean.UsuarioBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>

	<application>
		<locale-config>
			<default-locale>pt</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
	</application>

</faces-config>
